{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es6",
    "watch": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,

    "baseUrl": "src",
    "paths": {
      "tslib" : ["../node_modules/tslib/tslib.d.ts"],
      "@api/*": ["api/*"],
      "@app/*": ["app/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"],
      "@utils/*": ["utils/*"],

      "@api": ["api/index"],
      "@env": ["config/environment/index"],
      "@Notifier": ["app/Notifier/index"],
      "@State": ["config/redux/State"],
      "@utils": ["utils/index"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.test.ts?(x)"
  ]
}
